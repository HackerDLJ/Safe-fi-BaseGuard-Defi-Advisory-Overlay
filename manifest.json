{
  "manifest_version": 3,
  "name": "Safe-Fi: DeFi Advisor",
  "version": "1.0.0",
  "description": "Smart trade advisor for Base DEXs. Avoid slippage with AI-powered execution analysis.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://app.uniswap.org/*",
    "https://basescan.org/*"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": "https://picsum.photos/128/128"
  },
  "content_scripts": [
    {
      "matches": ["https://app.uniswap.org/*"],
      "js": ["contentScript.js"]
    }
  ]
}